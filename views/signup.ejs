<% include partials/header.ejs %>
<div class="col-md-6">
    <h3>Step 1: Sign Up</h3>
    <hr>
    <form class="form" method="post" action="/auth/signup">
        <input type="text" class="form-control" placeholder="Enter your full name" name="name">
        <br><br>
        <input type="text" class="form-control" placeholder="Enter your address (EX 1234 Dog Street, Seattle, WA 99999)" name="address">
        <br><br>
        <input type="text" class="form-control" placeholder="Enter your e-mail" name="email"> 
        <br><br>
        <input type="password" class="form-control" placeholder="Choose a password" name="password">
        <br><br>
        <input type="password" class="form-control" placeholder="Re-type your password" name="password2">
        <br><br>
        <select class="form-control" name="distance">
            <option class="options" value="1">Dog parks within: 1 mile</option>
            <option value="5">Dog parks within: 5 miles</option>
            <option value="10">Dog parks within: 10 miles</option>
            <option value="25">Dog parks within: 25 miles</option>
        </select>
        <br><br>
        <input type="submit" value="sign up" class="btn btn-primary">
    </form>
</div>
<% include partials/footer.ejs %>