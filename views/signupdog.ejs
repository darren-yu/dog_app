<% include partials/header.ejs %>
<div class="col-md-6">
    <h3>Step 2: Add Dog</h3>
    <hr>
    <form class="form" method="post" action="/dogs" enctype="multipart/form-data">
        <input type="text" class="form-control" placeholder="Enter the name of dog" name="name">
        <br><br>
        <input type="text" class="form-control" placeholder="Enter the breed of dog" name="breed">
        <br><br>
        <input type="text" class="form-control" placeholder="Enter the age of dog" name="age">
        <br><br>
        <select class="form-control" name="weight">
            <option value="small">Less than 15.0 pounds.</option>
            <option value="big">Greater than 15.1 pounds.</option>
        </select>
        <br><br>
        <select class="form-control" name="gender">
            <option value="male">Gender: Male</option>
            <option value="female">Gender: Female</option>
        </select>
        <br><br>
        <label for="form-control">Attach dog image</label>
        <input type="file" name="dogImg">
        <br><br>
        <input type="submit" value="Add Dog" class="btn btn-primary">
    </form>

</div>
