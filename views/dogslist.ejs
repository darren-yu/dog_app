<% include partials/header.ejs %>


		<div class="col-md-12 text-block wrapper">
			<img class="dogImage" src="/images/doggroup.jpeg">
			<h3>Dogs List <img src="/images/Pawprint.png"></h3>
			<hr>
			<h4>The <b>Dogs List</b> displays doggies of other owners who just wanna have fun! Here you will be able to
			select a potential play pal for your little friend. Filter for specific doggies if your little friend is on the shy side.
			</h4>
			<hr>
			<h5>Filter by:</h5>
			<form class="form" method="get" action="/dogs/list">
				<select class="form-control" name="weight">
					<option value="">All weight</option>
					<option value="small">Small: dogs &lt; 20 lbs</option>
					<option value="medium">Medium: dogs between 20.1 to 34 lbs</option>
					<option value="big">Big: dogs &gt; 34.1 lbs</option>
				</select>
				<br>
				<select class="form-control" name="gender">
					<option value="">All gender</option>
					<option value="male">male dogs</option>
					<option value="female">female dogs</option>
				</select>
				<br>
				<input type="submit" class="btn btn-primary" value="Filter">
			</form>
			<hr>
		</div>

		<div class="col-md-12 text-block wrapper table-responsive">
		<br>
			<table class="table table-hover" border="2">
				<tr>
					<th>Paw-file Picture</th>
					<th>Name</th>
					<th>Breed</th>
					<th>Gender</th>
					<th>Weight Size</th>
					<th>Age</th>
					<th>Play Date?</th>
				</tr>
				<% alldogs.forEach(function(element) {%>
				<tr>
					<td>
						<img src="<%= element.thumb %>">
					</td>

					<td>
						<%= element.name %>
					</td>

					<td>
						<%= element.breed %>
					</td>

					<td>
						<%= element.gender %>
					</td>

					<td>
						<%= element.weight %>
					</td>

					<td>
						<%= element.age %>
					</td>

					<td>
						<a href="/dogs/play/<%= element.id %>" class="btn btn-info btn-sm">Paw Me!</a>
					</td>
				</tr>
				<% }) %>
			</table>
		</div>


<% include partials/footer.ejs %>




